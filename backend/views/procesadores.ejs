<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 10px; padding: 20px;">
    <% if (procesadores.length > 0) { %>
        <% procesadores.forEach(procesador => { %>
            <div style="width: 200px; border: 1px solid #ddd; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); overflow: hidden; background-color: #fff; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 12px; color: #333; display: flex; flex-direction: column;">
                
                <img src="<%= procesador.imagen %>" alt="<%= procesador.nombre %>" style="width: 100%; height: 150px; object-fit: cover; border-bottom: 1px solid #ddd;">

                <div style="flex: 1; display: flex; flex-direction: column; justify-content: space-between; padding: 12px;">
                    <div>
                        <h3 style="margin: 6px 0 8px; font-size: 16px; color: #222; font-weight: 600;"><%= procesador.nombre %></h3>
                        <p><strong>Marca:</strong> <%= procesador.marca %></p>
                        <p><strong>Modelo:</strong> <%= procesador.modelo %></p>
                        <p><strong>Socket:</strong> <%= procesador.socket %></p>
                        <p><strong>Chipset GPU:</strong> <%= procesador.chipsetGpu %></p>
                        <p><strong>NÃºcleos:</strong> <%= procesador.nucleos %> | <strong>Hilos:</strong> <%= procesador.hilos %></p>
                        <p><strong>Frecuencia:</strong> <%= procesador.frecuencia %> GHz</p>
                        <p><strong>Precio:</strong> $<%= procesador.precio %></p>
                        <p><strong>Lanzamiento:</strong> <%= procesador.fechaLanzamiento.toISOString().split('T')[0] %></p>
                    </div>

                    <a href="#" class="btn-modificar-procesador" data-id="<%= procesador.id %>" style="margin-top: 10px; display: block; width: 100%; padding: 6px 0; text-align: center; text-decoration: none; background-color: #007bff; color: white; border-radius: 6px; font-size: 13px; font-weight: 600; transition: background-color 0.3s ease;">
                        Modificar
                    </a>
                </div>

                <% if (procesador.visible) { %>
                    <button style="border: none; background-color: #0b9416; color: white; padding: 10px 0; font-size: 13px; font-weight: 600; cursor: default; width: 100%; border-top: 1px solid #ccc; border-radius: 0 0 12px 12px;">
                        ACTIVO
                    </button>
                <% } else { %>
                    <button style="border: none; background-color: red; color: white; padding: 10px 0; font-size: 13px; font-weight: 600; cursor: default; width: 100%; border-top: 1px solid #ccc; border-radius: 0 0 12px 12px;">
                        INACTIVO
                    </button>
                <% } %>

            </div>
        <% }) %>
    <% } else { %>
        <p style="text-align:center; color: #888; font-size: 14px;">No hay procesadores cargados.</p>
    <% } %>
</div>
<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 10px; padding: 20px;">
    <% if (placasvideo.length > 0) { %>
        <% placasvideo.forEach(placa => { %>
            <div style="width: 200px; border: 1px solid #ddd; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); overflow: hidden; background-color: #fff; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 12px; color: #333; display: flex; flex-direction: column;">
                
                <img src="<%= placa.imagen %>" alt="<%= placa.nombre %>" style="width: 100%; height: 150px; object-fit: cover; border-bottom: 1px solid #ddd;">

                <div style="flex: 1; display: flex; flex-direction: column; justify-content: space-between; padding: 12px;">
                    <div>
                        <h3 style="margin: 6px 0 8px; font-size: 16px; color: #222; font-weight: 600;"><%= placa.nombre %></h3>
                        <p><strong>Marca:</strong> <%= placa.marca %></p>
                        <p><strong>Tipo:</strong> <%= placa.tipo %></p>
                        <p><strong>Memoria:</strong> <%= placa.tipoMemoria %> - <%= placa.capacidadMemoria %></p>
                        <p><strong>Chipset GPU:</strong> <%= placa.chipsetGpu %></p>
                        <p><strong>Conexiones:</strong> VGA: <%= placa.vga %> | DVI Digital: <%= placa.dviDigital %> | HDMI: <%= placa.hdmi %> | DisplayPorts: <%= placa.displayports %></p>
                        <p><strong>Precio:</strong> $<%= placa.precio %></p>
                        <p><strong>Lanzamiento:</strong> <%= placa.fechaLanzamiento.toISOString().split('T')[0] %></p>
                    </div>

                    <a href="#" class="btn-modificar-placa" data-id="<%= placa.id %>" style="margin-top: 10px; display: block; width: 100%; padding: 6px 0; text-align: center; text-decoration: none; background-color: #007bff; color: white; border-radius: 6px; font-size: 13px; font-weight: 600; transition: background-color 0.3s ease;">
                        Modificar
                    </a>
                </div>

                <% if (placa.visible) { %>
                    <button style="border: none; background-color: #0b9416; color: white; padding: 10px 0; font-size: 13px; font-weight: 600; cursor: default; width: 100%; border-top: 1px solid #ccc; border-radius: 0 0 12px 12px;">
                        ACTIVO
                    </button>
                <% } else { %>
                    <button style="border: none; background-color: red; color: white; padding: 10px 0; font-size: 13px; font-weight: 600; cursor: default; width: 100%; border-top: 1px solid #ccc; border-radius: 0 0 12px 12px;">
                        INACTIVO
                    </button>
                <% } %>

            </div>
        <% }) %>
    <% } else { %>
        <p style="text-align:center; color: #888; font-size: 14px;">No hay placas de video cargadas.</p>
    <% } %>
</div>